{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["*", "src/*"] },
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es2015",    
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}